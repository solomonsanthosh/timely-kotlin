<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="15dp"
    android:id="@+id/updateActivityLayout"
    tools:context=".view.activities.updateActivity">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit1update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232323">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText1update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#232323"
            android:hint="Title..."
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
    </com.google.android.material.textfield.TextInputLayout>


    <EditText
        android:id="@+id/editText2update"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="#232323"
        android:ems="20"
        android:gravity="start|top"
        android:hint="Content..."
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <Button
        android:id="@+id/datePickerupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pick Date" />

    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Update Activity" />
</LinearLayout>
</layout>